<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.IIE.Industrial_Innovation_Engine_server.mapper.UsersMapper">

    <select id="getUsers" resultType="com.IIE.Industrial_Innovation_Engine_server.entity.User">
        SELECT id, user_number, user_nick_name, user_name, user_role, mail, status
        FROM users;
    </select>

    <update id="changeUserStatus">
        UPDATE users SET status = #{status} WHERE id = #{id}
    </update>

</mapper>
